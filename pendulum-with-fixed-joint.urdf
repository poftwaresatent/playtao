<?xml version="1.0" ?>

<robot name="pendulum-with-fixed-joint">

  <joint name="joint_a" type="revolute">
    <axis xyz="1.0  0.0  0.0"/>	<!-- rotate around X -->
    <origin rpy="0.0  0.0  0.0"
	    xyz="0.0  0.0  0.0"/> <!-- attached to global origin -->
    <parent link="world"/>
    <child link="link_a"/>
    <!-- kdl_parser complains if there is no limit... -->
    <limit effort="10000" lower="-10000" upper="10000" velocity="10000"/>
  </joint>

  <link name="link_a">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0  0.5  0.0"/> <!-- COM wrt parent frame -->
      <!-- URDF expresses inertia wrt COM, and here we just have a point mass, so: -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
      <!-- otherwise (if inertia was expressed wrt origin, which it isn't) we'd have to say:
	   <inertia ixx="0.25" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.25"/> -->
    </inertial>
  </link>

  <joint name="joint_b" type="fixed">
    <origin rpy="0.0  0.0  0.0"
	    xyz="0.0  0.5  0.0"/> <!-- attached to COM of link_a -->
    <parent link="link_a"/>
    <child link="link_b"/>
    <limit effort="10000" lower="-10000" upper="10000" velocity="10000"/>
  </joint>

  <link name="link_b">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0  0.5  0.0"/> <!-- COM wrt parent frame -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>>
    </inertial>
  </link>

</robot>
