<?xml version="1.0" ?>

<robot name="double-pendulum">

  <joint name="joint_one" type="revolute">
    <axis xyz="1.0  0.0  0.0"/>	<!-- rotate around X -->
    <origin rpy="0.0  0.0  0.0"
	    xyz="0.0  0.0  0.0"/> <!-- attached to global origin -->
    <parent link="world"/>
    <child link="link_one"/>
    <!-- kdl_parser complains if there is not limit... -->
    <limit effort="10000" lower="-10000" upper="10000" velocity="10000"/>
  </joint>

  <link name="link_one">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0  1.0  0.0"/> <!-- presumably this is the COM wrt parent frame? -->
      <!-- URDF expresses inertia wrt COM, and here we just have a point mass, so: -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
      <!-- otherwise (if inertia was expressed wrt origin, which it isn't) we'd have to say:
           <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="1.0"/> -->
    </inertial>
  </link>
  
  <joint name="joint_two" type="revolute">
    <axis xyz="1.0  0.0  0.0"/>	<!-- rotate around X -->
    <origin rpy="0.0  0.0  0.0"
	    xyz="0.0  1.0  0.0"/> <!-- attached to COM of link_one -->
    <parent link="link_one"/>
    <child link="link_two"/>
    <limit effort="10000" lower="-10000" upper="10000" velocity="10000"/>
  </joint>
  
  <link name="link_two">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0  0.5  0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

</robot>
