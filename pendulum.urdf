<?xml version="1.0" ?>

<robot name="pendulum">
  
  <joint name="joint_one" type="revolute">
    <axis xyz="1.0  0.0  0.0"/>
    <origin rpy="0.0  0.0  0.0" xyz="0.0  0.0  0.0"/>
    <parent link="world"/>
    <child link="link_one"/>
    <limit effort="10000" lower="-10000" upper="10000" velocity="10000"/>
  </joint>
  
  <link name="link_one">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0  1.0  0.0"/>
      <!-- URDF expresses inertia wrt COM! -->
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

</robot>
